<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnacksApp.Pages.RegisterPage"
             NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*"
       RowSpacing="20"
       Margin="20,150,20,40">

        <Image Grid.Row="0"
            Source="lanchesico.png"
            Aspect="AspectFit"
            HeightRequest="100"
            WidthRequest="100" />
        <Label Grid.Row="1"
            Text="Hello! Join us"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Frame Grid.Row="2"
            Padding="15"
            BackgroundColor="White">
            <VerticalStackLayout>
                <Entry Placeholder="Name"
                    x:Name="EntName" />

                <Entry Placeholder="Email"
                    Keyboard="Email"
                    x:Name="EntEmail" />

                <Entry Placeholder="Phone Number"
                    Keyboard="Telephone"
                    x:Name="EntPhone" />

                <Entry Placeholder="Password"
                    IsPassword="True"
                    x:Name="EntPassword" />
            </VerticalStackLayout>
        </Frame>

        <Button Grid.Row="3"
             Text="Register"
             FontSize="Medium"
             BackgroundColor="#a90409"
             x:Name="BtnSignup" 
             Clicked="BtnSignup_ClickedAsync"/>

        <HorizontalStackLayout Grid.Row="4"
                            Spacing="2" HorizontalOptions="Center"                      
                            VerticalOptions="EndAndExpand">
            <Label Text="Already have an account?" />
            <Label Text="Login here" TextColor="#a90409" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapLogin" Tapped="TapLogin_TappedAsync"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
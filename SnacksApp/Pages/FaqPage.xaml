<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnacksApp.Pages.FaqPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="FAQ Page">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">
            <Label Text="FAQ"
                   FontSize="Medium"
                   TextColor="DarkBlue"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="How can I place an order?"
                           FontSize="15"
                           FontAttributes="Bold" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Label Text="To place an order, you must browse our snack catalog, select the desired items, add to cart and proceed to checkout to finalize the purchase."
                           TextColor="DarkBlue"
                           FontSize="12" />
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="What payment methods are accepted?"
                           FontSize="15"
                           FontAttributes="Bold" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Label Text="We accept credit and debit cards, Pix, and cash on delivery."
                           TextColor="DarkBlue"
                           FontSize="12" />
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="Can I track the status of my order?"
                           FontSize="15"
                           FontAttributes="Bold" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Label Text="Yes, you can track your order status through the 'My Orders' section on our app."
                           TextColor="DarkBlue"
                           FontSize="12" />
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="How long does it take for my order to be delivered?"
                           FontSize="15"
                           FontAttributes="Bold" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Label Text="Delivery time may vary depending on your location and current demand. Our orders are usually delivered within 45 minutes."
                            TextColor="DarkBlue"
                           FontSize="12" />
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="Can I cancel or change my order?"
                           FontSize="15"
                           FontAttributes="Bold" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Label Text="You can cancel or change your order within 10 minutes of placing your order. To do this, contact our support via the app."
                           TextColor="DarkBlue"
                           FontSize="12" />
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="What do I do if I receive an incorrect order?"
                           FontSize="15"
                           FontAttributes="Bold" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Label Text="If you receive an incorrect order, please contact our support immediately so we can resolve the issue as quickly as possible."
                           TextColor="DarkBlue"
                           FontSize="12" />
                </toolkit:Expander.Content>
            </toolkit:Expander>

            <toolkit:Expander>
                <toolkit:Expander.Header>
                    <Label Text="How can I contact support?"
                           FontSize="15"
                           FontAttributes="Bold" />
                </toolkit:Expander.Header>
                <toolkit:Expander.Content>
                    <Label Text="You can contact support from Monday to Friday via email 'contact@macsnacks.com' or by phone: (14)9876-0011 from 8:00 am to 6:00 pm."
                           TextColor="DarkBlue"
                           FontSize="12" />
                </toolkit:Expander.Content>
            </toolkit:Expander>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
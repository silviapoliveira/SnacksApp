<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnacksApp.Pages.ConfirmedOrderPage"
             Title="Confirmed Order Page">

    <VerticalStackLayout
      VerticalOptions="CenterAndExpand"
         HorizontalOptions="CenterAndExpand"
         Padding="20">

        <Image Source="confirmado.gif"
               HeightRequest="200" 
               WidthRequest="200"
            Aspect="AspectFit" />

        <Label Text="Your order has been confirmed!"
            FontSize="18"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand" 
               TextColor="DarkBlue"   
               Margin="0,10,0,0" />

        <Button Text="Return"
             FontAttributes="Bold"
             HorizontalOptions="Center" 
                x:Name="BtnBack"  
                Clicked="BtnBack_Clicked"
             VerticalOptions="CenterAndExpand" />
    </VerticalStackLayout>
    
</ContentPage>